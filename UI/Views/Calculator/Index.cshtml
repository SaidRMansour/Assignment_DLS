@{
    ViewBag.Title = "Front page";
}

<h2>Calculator</h2>

<form method="post" action="@Url.Action("Calculate")">
    <input type="text" name="numberInput" placeholder="Enter numbers, e.g., 1,2,3" />
    <input type="submit" name="operation" value="Add" />
    <input type="submit" name="operation" value="Subtract" />
</form>

@if (ViewBag.Error != null)
{
    <p>@ViewBag.Error</p>
}

@if (ViewBag.Result != null)
{
    <p>Result: @ViewBag.Result</p>
}

@if (ViewBag.Operations != null)
{
    <h3>Past Operations:</h3>
    <select size="5" style="width:300px;">
        @foreach (var item in ViewBag.Operations)
        {
            <option>@item.Item1, @item.Item2, @item.Item3</option>
        }
    </select>
}